<SMDScreen>:
    BoxLayout:
        orientation:"vertical"
        MDLabel:
            id:result
            text: root.result
            font_style: 'Display1'
            theme_text_color: 'Primary'
            halign: 'center'
            size_hint_y: None
        FloatLayout:
            Widget:
                pos_hint:{'center_x': .5, 'y': .5}
                size_hint:(None, None)
                size:(190, 80)
                canvas:
                    Color:
                        rgba:.58, .65, .65, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            TextInput:
                id:text_input
                multiline:False
                on_text: root.update_padding(args[0])
                padding_x: self.width/2
                size_hint:(None, None)
                size:(150, 80)
                background_normal:""
                background_color:(0, 0, 0, 1)
                cursor_color:(1, 1, 1, 1)
                foreground_color:(1, 1, 1, 1)
                pos_hint:{'center_x': .5, 'y': .5}
                font_size:50
                on_text_validate:root.calculation(self)

