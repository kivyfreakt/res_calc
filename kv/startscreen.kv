NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer
        NavigationDrawerToolbar:
            title: "Navigation"
        NavigationDrawerIconButton:
            icon: 'numeric-4-box'
            text: "4 rings"
            on_release: app.four_rings()
        NavigationDrawerIconButton:
            icon: 'numeric-5-box'
            text: "5 rings"
            on_release: app.five_rings()
        NavigationDrawerIconButton:
            icon: 'checkbox-blank'
            text: "SMD"
            on_release: app.smd()
        NavigationDrawerIconButton:
            icon: 'clipboard-text'
            text: "About"
            on_release: app.about()
        NavigationDrawerIconButton:
            icon: 'settings-box'
            text: "Settings"
            on_release: app.settings()
        NavigationDrawerIconButton:
            icon: 'close-box'
            text: "Exit"
            on_release: app.stop()

    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: 'Resistor calculator'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]
        ScreenManagement:
            id: manager
            size_hint: 1, 0.5
            FourRingsScreen:
                id: 4rings
            FiveRingsScreen:
                id: 5rings
            SMDScreen:
                id: smd
            AboutScreen:
                id: about
            SettingsScreen:
                id: settings