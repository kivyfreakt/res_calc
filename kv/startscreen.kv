#:import Toolbar kivymd.toolbar.Toolbar
#:import MDNavigationDrawer kivymd.navigationdrawer.MDNavigationDrawer
#:import NavigationLayout kivymd.navigationdrawer.NavigationLayout
#:import NavigationDrawerToolbar kivymd.navigationdrawer.NavigationDrawerToolbar

NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer
        NavigationDrawerToolbar:
            title: "Navigation"
        NavigationDrawerIconButton:
            icon: 'invert-colors'
            text: "Color"
            on_release: app.root.ids.manager.current = 'color'
        NavigationDrawerIconButton:
            icon: 'checkbox-blank'
            text: "SMD"
            on_release: app.root.ids.manager.current = 'smd'
        NavigationDrawerIconButton:
            icon: 'clipboard-text'
            text: "About"
            on_release: app.root.ids.manager.current = 'about'
        NavigationDrawerIconButton:
            icon: 'settings-box'
            text: "Settings"
            on_release: app.root.ids.manager.current = 'settings'
        NavigationDrawerIconButton:
            icon: 'close-box'
            text: "Exit"
            on_release: app.stop()

    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: 'Resistor calculator'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]
        ScreenManagement:
            id: manager
            size_hint: 1, 0.5
            ColorScreen:
                id: color_scr
            SMDScreen:
                id: smd
            AboutScreen:
                id: about
            SettingsScreen:
                id: settings